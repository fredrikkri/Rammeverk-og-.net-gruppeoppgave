<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="brusOgPotetgull.userInterface.Views.AirportInterface"
             Title="Airport Controlpanel">
    
    <VerticalStackLayout>
        <Label 
            Text="Airport Options"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontAttributes="Bold"
            />
        <Entry
            x:Name="GateName" Placeholder="Gate 1"/>
        <Button
            Text="Add Gate"
            Clicked="AddGate"
            />
        <Entry
            x:Name="TermName" Placeholder="Terminal 1"/>
        <Button
            Text="Add Terminal"
            Clicked="AddTerminal"
            />
    </VerticalStackLayout>
    
</ContentPage>