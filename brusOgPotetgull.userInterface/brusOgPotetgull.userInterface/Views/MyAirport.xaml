<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="brusOgPotetgull.userInterface.Views.MyAirport"
             xmlns:viewmodel="clr-namespace:brusOgPotetgull.userInterface.ViewModel"
             x:DataType="viewmodel:MyAirportModel">
    <ScrollView>
        <VerticalStackLayout>
            <Image
                Source="background3.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                ScaleY="4.4"
                ScaleX="5.55"
                AnchorY="0.1"/>

            <Label
                    Text="{Binding Airport.Name}"
                    TextColor="Black"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    />
            <HorizontalStackLayout Spacing="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Gates"/>
                    <CollectionView ItemsSource="{Binding Gates}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Label TextColor="Black" Text="{Binding Name ,FallbackValue='Name not found'}" Margin="10" />
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>