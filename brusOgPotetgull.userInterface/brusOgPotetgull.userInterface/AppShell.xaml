<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="brusOgPotetgull.userInterface.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:brusOgPotetgull.userInterface.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="brusOgPotetgull.userInterface"
    >
    <TabBar>
        <ShellContent
            Title="Create your Airport"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />
        
        <ShellContent
            Title="Airport Controlpanel"
            ContentTemplate="{DataTemplate views:AirportControlpanel}"
            Route="AirportControlpanel" />

        <ShellContent
            Title="Setup Taxiway System"
            ContentTemplate="{DataTemplate views:TaxiwaySystemConfigPage}"
            Route="TaxiwaySystemConfigPage" />

        <ShellContent
            Title="Setup Aircrafts and flights"
            ContentTemplate="{DataTemplate views:AircraftAndFlightsPage}"
            Route="AircraftAndFlightsPage" />

        <ShellContent
            Title="My Airport"
            ContentTemplate="{DataTemplate views:MyAirport}"
            Route="MyAirport" />

         <ShellContent
            Title="Simulation"
            ContentTemplate="{DataTemplate views:Simulation}"
            Route="Simulation"/>
    </TabBar>
</Shell>
