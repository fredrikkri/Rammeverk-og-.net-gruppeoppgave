<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:viewmodel="clr-namespace:brusOgPotetgull.userInterface.ViewModel" 
               x:Class="brusOgPotetgull.userInterface.Popups.FlightPopup"
               Size="400,400">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Flight Type"/>
        <Picker Title="Select Flight Type" ItemsSource="{Binding FlightTypeOptions}" SelectedItem="{Binding FlightTypeSelector, Mode=TwoWay}" />
        
        
        <HorizontalStackLayout
            Spacing="10">
            <Button Text="Add Flight" Command="{Binding AddFlightCommand}" />
            <Button Text="X" Command="{Binding CloseFlightPopupCommand}" BackgroundColor="Red" TextColor="White" FontSize="18"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>